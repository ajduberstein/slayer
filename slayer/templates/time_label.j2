function toCssString(json) {
  const keys = Object.keys(json);
  var k, attr;
  var cssStr = '';
  for (var i = 0; i < keys.length; i++) {
    k = keys[i];
    attr = json[k];
    cssStr += `${k}: ${attr};`
  }
  return cssStr;
}

const timeLabelStyle = {
  position: 'absolute',
  background: 'orange',
  left: '30%',
  top: '10%',
  'font-family': '"Helvetica Neue", sans-serif',
  'font-size': '42px',
  color: 'white',
  margin: '10px',
  'font-weight': 'bold',
  'z-index': 2,
  padding: '10px'
}

function addDatetimeLabel(datetime) {
  var h = document.createElement('div');
  h.innerHTML = '' + datetime;
  h.style.cssText = toCssString(timeLabelStyle);
  h.id = 'datetimeLabel';
  document.getElementById('labels').appendChild(h);
}

function setDatetime(datetime) {
  var label = document.getElementById('datetimeLabel')
  if (label == null) {
    addDatetimeLabel(datetime);
  } else {
    label.innerHTML = datetime;
  }
}
